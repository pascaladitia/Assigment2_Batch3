<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFEFE"
    android:padding="20dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:textSize="25sp"
       android:textStyle="bold"
       android:textColor="#03A9F4"
       android:text="Hitung Umur"/>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#03A9F4"
        android:text="Tahun Lahir :"/>

    <EditText
        android:id="@+id/umur_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_text"
        android:textColorHint="#AEAAAA"
        android:hint="input"
        android:inputType="number"
        android:textColor="#AEAAAA"/>

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#03A9F4"
        android:text="Umur :"/>

    <TextView
        android:id="@+id/umur_hasil"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#03A9F4"
        android:gravity="center"
        android:textSize="18sp"
        android:text="Hasil"/>

    <Button
        android:id="@+id/btn_hitungUmur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_button"
        android:textColor="#FFFFFF"
        android:text="Hitung Umur"/>

    <Button
        android:id="@+id/btn_hitungUmurBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_button"
        android:textColor="#FFFFFF"
        android:text="Kembali"/>
</LinearLayout>
